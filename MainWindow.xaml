<Window x:Class="TocBuilder_dotnet_framework.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:TocBuilder_dotnet_framework" xmlns:vm="clr-namespace:TocBuilder_dotnet_framework.ViewModels" xmlns:model="clr-namespace:TocBuilder_dotnet_framework.Models" mc:Ignorable="d" Title="Presentation TOC Builder" Height="700" Width="1200">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        <DataTemplate x:Key="PreviewItemTemplate" DataType="model:PreviewItem">
            <Border BorderBrush="#CCCCCC" BorderThickness="1" Background="White" Padding="2">
                <StackPanel>
                    <Image Source="{Binding Thumbnail}" Stretch="Uniform" MaxWidth="{Binding Width}" MaxHeight="{Binding Height}"/>
                    <TextBlock Text="{Binding Caption}" FontSize="10" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>
    <!-- Основной Grid с тремя строками: файл, настройки, затем основной разделенный контент -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Панель файла -->
            <RowDefinition Height="Auto"/>
            <!-- Настройки -->
            <RowDefinition Height="*"/>
            <!-- Основная область (выбор слайдов + предпросмотр) -->
            <RowDefinition Height="Auto"/>
            <!-- Статус -->
        </Grid.RowDefinitions>
        <!-- Панель файла (занимает всю ширину) -->
        <GroupBox Grid.Row="0" Header="Презентация" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Выбрать" Command="{Binding BrowseCommand}" Width="80"/>
                <TextBox Grid.Column="1" Text="{Binding FilePath}" IsReadOnly="True" Margin="10,0" VerticalAlignment="Center"/>
                <Button Grid.Column="2" Content="Создать TOC" Command="{Binding GenerateCommand}" IsEnabled="{Binding CanGenerate}" Width="100"/>
            </Grid>
        </GroupBox>
        <!-- Настройки (занимает всю ширину) -->
        <GroupBox Grid.Row="1" Header="Настройки сетки" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <StackPanel VerticalAlignment="Center" Width="100">
                    <CheckBox IsChecked="{Binding UseFixedColumns}">
                        <CheckBox.Content>
                            <TextBlock Text="Фиксировать кол-во колонок" TextWrapping="Wrap" TextAlignment="Center"/>
                        </CheckBox.Content>
                    </CheckBox>
                </StackPanel>
                <StackPanel Margin="20,0,20,0">
                    <TextBlock Text="Колонок:" Margin="0,0,0,5"/>
                    <Slider x:Name="ColumnsSlider" Minimum="1" Maximum="6" Value="{Binding Columns}" Width="100" TickFrequency="1" IsSnapToTickEnabled="True"/>
                    <TextBlock Text="{Binding Columns}" HorizontalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Отступы (px):" Margin="0,0,0,5"/>
                    <Slider x:Name="MarginSlider" Minimum="10" Maximum="50" Value="{Binding Margin}" Width="100" TickFrequency="5" IsSnapToTickEnabled="True"/>
                    <TextBlock Text="{Binding Margin, StringFormat='{}{0}px'}" HorizontalAlignment="Center" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                    <Button Content="Выбрать все" Command="{Binding SelectAllCommand}"/>
                    <Button Content="Снять все" Command="{Binding DeselectAllCommand}"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <!-- Основная область (разделена на 2 колонки) -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <!-- Левая колонка для выбора слайдов -->
                <ColumnDefinition Width="*"/>
                <!-- Правая колонка для предпросмотра -->
            </Grid.ColumnDefinitions>
            <!-- Левая панель выбора слайдов -->
            <GroupBox Grid.Column="0" Header="Выберите слайды для оглавления" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Slides}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="3" Margin="2" Background="White" Padding="3" MinHeight="60">
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Top" Margin="0,5,5,0"/>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Number, StringFormat='Слайд {0}'}" FontWeight="Bold" Margin="0,0,0,2"/>
                                            <Image Source="{Binding Thumbnail}" Height="60" Stretch="Uniform" HorizontalAlignment="Left"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </GroupBox>
            <!-- Правая панель предпросмотра -->
            <GroupBox Grid.Column="1" Header="Предпросмотр TOC">
                <Border Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="3">
                    <Viewbox Stretch="Uniform">
                        <!-- Uniform сохраняет пропорции -->
                        <Canvas x:Name="PreviewCanvas" Background="White" Width="{Binding PreviewCanvasWidth}" Height="{Binding PreviewCanvasHeight}">
                            <ItemsControl ItemsSource="{Binding PreviewItems}" ItemTemplate="{StaticResource PreviewItemTemplate}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Canvas.Left" Value="{Binding X}" />
                                        <Setter Property="Canvas.Top" Value="{Binding Y}" />
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                            </ItemsControl>
                        </Canvas>
                    </Viewbox>
                </Border>
            </GroupBox>
        </Grid>
        <!-- Статус (занимает всю ширину, строка внизу) -->
        <Border Grid.Row="3" Background="#F5F5F5" CornerRadius="3" Padding="10" Margin="0,10,0,0">
            <TextBlock Text="{Binding Status}" FontStyle="Italic" Foreground="#333333" TextWrapping="Wrap"/>
        </Border>
        <!-- Индикатор загрузки (занимает всё окно) -->
        <Border Grid.Row="0" Grid.RowSpan="4" Background="#80000000" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" Panel.ZIndex="100">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding Status}" Foreground="White" FontSize="14" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" MaxWidth="300"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>